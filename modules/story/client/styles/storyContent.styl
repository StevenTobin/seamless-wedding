.story-content
    clear: both
    .content
        //position: relative

    .headline
        margin-left: 0px
        h1
            font-family: MyScript
            font-weight: normal
            font-size: 85px
            color: font-color
            //text-shadow: 0px 0px 10px #111

    .text
        text-align: justify
        z-index: 3
        font-size: 17px
        
    .next
       width: 100%;
       text-align: center
       position: absolute
       bottom: 0px
       cursor: pointer

    .container
        z-index: 2
        width: 100%
        .whitebackground
            white-background()
            display: inline-block
            width: 40%
            padding: 0 2.5% 0 2.5%
            box-shadow: 3px 0px 7px 0px #999;
            min-height: 600px
            max-width: 600px
        .left-container
            overflow: auto

    .image
        background-size: cover
        background-position: center
        position: absolute
        right: 2.5%
        z-index: 1
        width: 50%
        display: inline-block
        min-height: 475px
        box-shadow: 0px 0px 13px 0px #000;
