.story-content
    .content
        position: relative

    .headline
        margin-left: 20px
        h1
            font-family: sans-serif
            font-weight: normal
            font-size: 80px
            color: secondary-font-color
            text-shadow: 0px 0px 10px #111

    .text
        text-align: justify
        width: 500px
        z-index: 3
        position: absolute
        font-size: 17px
        height: 450px
        left: 30px
        bottom: 400px

     .poem
        position: absolute
        top: 200px
        right: 10px
        z-index: 3

        p
            font-size: 17px
            margin-top: 0px
            margin-bottom: 0px
            text-align: center;

    .next
       width: 100%;
       text-align: center
       position: absolute
       bottom: 0px
       cursor: pointer

    .container
        z-index: 2
        height: 500px
        width: 100%

    .image
        background-size: 100% auto
        z-index: 1
        width: 1920px
        height: 800px
