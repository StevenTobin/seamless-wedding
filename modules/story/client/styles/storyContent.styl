.story-content
    .content
        position: relative

    .text
        text-align: justify
        width: 500px
        z-index: 3
        position: absolute
        font-size: 20px
        height: 450px
        left: 100px
        bottom: 400px

    .headline
        left: 80px

    .next
       width: 100%;
       text-align: center
       position: absolute
       bottom: 0px
       cursor: pointer

    .container
        z-index: 2
        height: 500px
        width: 100%

    .image
        background-size: 100% auto
        z-index: 1
        width: 1920px
        height: 800px

    .poem
        position: absolute
        top: 200px
        right: 100px
        z-index: 3

        p
            font-size: 20px
            margin-top: 0px
            margin-bottom: 0px
            text-align: center;
