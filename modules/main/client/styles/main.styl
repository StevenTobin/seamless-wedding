body
    font-family: "Tw Cen MT"
    font-weight: 100

center-on-screen()
    margin-left: auto
    margin-right: auto
    max-width: 87%

.navigation-small-content
    clear: both
    center-on-screen()
    margin-top: 50px
    .nav-item
        font-size: 20px
        color: menu-item-gold
        margin: 0px 55px
        float: left
        list-style-type: none

    .nav-item
        a
            color: menu-item-gold
            text-decoration: none

.navigation-full-content
    clear: both
    center-on-screen()
    margin-top: 50px
    .nav-item
        font-size: 20px
        color: menu-item-gold
        margin: 0px 55px
        float: left
        list-style-type: none

    .nav-item
        a
            color: menu-item-white
            text-decoration: none

.nav-spacer
    height: 50px

.small-content
    height: content-height
    center-on-screen()
    clear: left
    background-image: url(../images/neutral-backdrop.png)
    background-size: 100% 100%
    background-repeat: no-repeat
    background-attachment: fixed

.full-content
    background: url(../images/registry.jpg) no-repeat center center fixed
    -webkit-background-size: 100% 100%
    -moz-background-size: 100% 100%
    -o-background-size: 100% 100%
    background-size: 100% 100%