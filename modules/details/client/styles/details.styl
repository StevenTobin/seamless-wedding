.details
    height: max-content-height
    center-on-screen()
.details
    .details-content
        text-align: center
        margin-left: auto
        margin-right: auto
        font-size: 20px
        width: 90%
        padding-left: 5%
        padding-right:5%
        padding-top: 30px
        padding-bottom:30px;
        max-width: max-width
        margin-bottom: 30px
        //background-color:bgcolor
        height: auto
        //border-radius: border-rad
        overflow:auto
        text-shadow: 1px 1px 15px white

        a
            color: lightblue
            text-decoration: none
        p
            margin: 0px
        .left
            text-align:left

        ul
            padding: 0
            li
                list-style: none


        font-family: "Merriweather", serif
        font-weight: 100
        
        .details-title
            margin-bottom: 20px
            font-size: 50px
            text-shadow: none

        .details-h2
            margin-bottom: 10px
            font-size: 30px

        .details-details
            font-size: 40px
        

        .details-left
            float: left
            width: 48%
            padding-right: 2%
            

        .details-right
            overflow: hidden
            width: 48%
            padding-left: 2%
            

