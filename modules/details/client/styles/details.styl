.details
    height: max-content-height
    center-on-screen()
.details
    .details-content
        text-align: center
        margin-left: auto
        margin-right: auto
        font-size: 20px
        width: 90%
        padding: 5%
        max-width: 1080px
        margin-top: 20px
        margin-bottom: 30px
        background-color:bgcolor

        a
            color: lightblue
            text-decoration: none
        p
            margin: 0px
        ul
            padding: 0
            li
                list-style: none
        font-family: "Merriweather", serif
        font-weight: 100
        
        .details-title
            margin-bottom: 10px
            font-size: 50px

        .details-h2
            margin-bottom: 10px
            font-size: 30px

        .details-details
            font-size: 40px

        .details-left
            float: left
            width: 45%

        .details-right
            overflow: hidden
            float: right
            width: 45%

