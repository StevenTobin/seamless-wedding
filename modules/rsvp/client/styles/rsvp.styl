.rsvp
    height: max-content-height
    center-on-screen()
.rsvp    
    .rsvp-background
        position: absolute
        top: 0px
        z-index: -1;

        img
            width: 100%
            height: auto

    input, textarea
        width: 350px;
        color: #6b6b6b

    select
        font-size: 18px

    input.submit
        margin: 0 auto;
        border: none
        margin-top: 20px;
        margin-bottom: 20px;
        padding: 15px;
        width: 274px;
        font-size: 24px;
        margin-bottom: 70px;
        border-bottom: none
        width: auto
        display: block;
        color: white;
        text-shadow: 0 -1px 1px rgba(0, 0, 0, 0.37);
        -moz-box-shadow: 0 1px 1px rgba(121, 97, 97, 0.92),inset 0 -1px 1px rgba(0,0,0,.22);
        -webkit-box-shadow: 0 1px 1px rgba(121, 97, 97, 0.92),inset 0 -1px 1px rgba(0,0,0,.22);
        box-shadow: 0 1px 1px rgba(121, 97, 97, 0.92),inset 0 -1px 1px rgba(0,0,0,.22);
        background-image: #7c149f;
        background-image: -moz-linear-gradient(90deg, #8F8F8F 0,#A7A7A7 100%);
        background-image: -o-linear-gradient(90deg, #8F8F8F 0,#A7A7A7 100%);
        background-image: -webkit-linear-gradient(90deg, #8F8F8F 0,#A7A7A7 100%);
        background-image: linear-gradient(90deg, #8F8F8F 0,#A7A7A7 100%);
        -webkit-border-radius: 10px;
        -moz-border-radius: 10px;
        border-radius: 10px;
        font-family: "Helvetica Neue", "Helvetica", "Arial"



        &:hover
            -moz-box-shadow: 0 1px 1px rgba(160, 160, 160, 0.92),inset 0 -1px 1px rgba(0,0,0,.22);
            -webkit-box-shadow: 0 1px 1px rgba(160, 160, 160, 0.92),inset 0 -1px 1px rgba(0,0,0,.22);
            box-shadow: 0 1px 1px rgba(160, 160, 160, 0.92),inset 0 -1px 1px rgba(0,0,0,.22);
            
            background-image: -moz-linear-gradient(90deg, #AAA6A6 0,#B6B6B6 100%);
            /* gradient fill */
            background-image: -o-linear-gradient(90deg, #AAA6A6 0,#B6B6B6 100%);
            /* gradient fill */
            background-image: -webkit-linear-gradient(90deg, #AAA6A6 0,#B6B6B6 100%);
            /* gradient fill */
            background-image: linear-gradient(90deg, #AAA6A6 0,#B6B6B6 100%);
            /* gradient fill */
            text-decoration: none;

        &:active
            -moz-box-shadow: 0 1px 1px rgba(121, 97, 97, 0.92),inset 0 -1px 1px rgba(0,0,0,.22);
            -webkit-box-shadow: 0 1px 1px rgba(121, 97, 97, 0.92),inset 0 -1px 1px rgba(0,0,0,.22);
            box-shadow: 0 1px 1px rgba(121, 97, 97, 0.92),inset 0 -1px 1px rgba(0,0,0,.22);
            
            background-image: -moz-linear-gradient(90deg, #868686 0,#8B8B8B 100%);
            /* gradient fill */
            background-image: -o-linear-gradient(90deg, #868686 0,#8B8B8B 100%);
            /* gradient fill */
            background-image: -webkit-linear-gradient(90deg, #868686 0,#8B8B8B 100%);
            /* gradient fill */
            background-image: linear-gradient(90deg, #868686 0,#8B8B8B 100%);
            /* gradient fill */


    .rsvp-text
        font-family: "Merriweather", serif
        font-weight: 100
        center-on-screen()
        max-width: 500px;
        width: 100%
        color: white
        text-align: center
        .rsvp-title
            margin-bottom: 10px
            font-size: 50px

        .rsvp-details
            font-size: 40px

        a
            color: white
            text-decoration: none
        p
            margin: 0px

    .rsvp-image-props
        position: fixed
        bottom: 10px
        left: 10px

        a
            font-size: 14px
            color: white